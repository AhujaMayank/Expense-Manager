<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#b71c1c</item>
        <item name="colorPrimaryDark">#b71c1c</item>
        <item name="colorAccent">#484848</item>
      </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.weekly">
        <item name="colorPrimary">#6a1b9a</item>
        <item name="colorAccent">#9c4dcc</item>
        <item name="android:statusBarColor">#6a1b9a</item>
    </style>
    <style name="AppTheme.main">
        <item name="colorPrimary">#003d33</item>
        <item name="android:statusBarColor">#003d33</item>
    </style>
    <style name="AppTheme.daily">
        <item name="colorPrimary">#b71c1c</item>
        <item name="colorAccent">#484848</item>
        <item name="android:statusBarColor">#b71c1c</item>
    </style>

</resources>
